---
import { Image } from "astro:assets"
import "@fontsource/jura"
import "@fontsource/inter"
import agaLogo from "../images/aga-logo-circle.svg"
import meatball from "../images/meatball.svg"
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<slot name="head" />
		<!-- Adjust the path as needed -->
	</head>
	<body class="bg-agablue">
		<header>
			<!-- Header content here -->
			<nav class="flex justify-between h-20 bg-agablue">
				<div class="flex justify-start">
					<Image src={agaLogo} alt="AGA Logo" class="h-20 w-20" />
					<div
						class="hidden md:flex text-white font-sans font-semibold h-full items-center ml-[20px] gap-[20px]"
					>
						<div>Attend ▼</div>
						<div>Info ▼</div>
						<div>Schedule ▼</div>
						<div>Get Involved ▼</div>
					</div>
				</div>
				<div class="text-white flex">
					<div class="flex flex-col justify-center w-max">
						<div>July 13-21</div>
						<div>Portland, Oregon</div>
					</div>
					<button
						class="md:block hidden text-black px-4 py-2 my-4 mx-2 bg-agayellow font-sans font-semibold rounded-[10px]"
					>
						Register
					</button>
					<button>
						<Image src={meatball} alt="Menu" class="md:hidden h-10 w-10" />
					</button>
				</div>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer>
			<!-- Footer content here -->
		</footer>
	</body>
</html>
