---
import Layout from './Layout.astro'

const {frontmatter} = Astro.props
---

<Layout title={frontmatter.title}>
    <article class="max-w-2xl mx-auto mt-8 mb-16">
    <header class="mb-4">
        <h1 class="font-bold text-gray-900">{ frontmatter.title }</h1>
        <time class="block text-gray-600" datetime={frontmatter.date}>{frontmatter.date}</time>
    </header>

    <div class="prose lg:prose-xl">
      <slot />
    </div>
</article>
</Layout>
